
bal
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/fullchain.pem
    mode http
    option httplog
    option forwardfor

    acl is_root path -i /
    http-request set-var(txn.response) string(Holberton School)
    http-response set-header X-Holberton-School %[var(txn.response)] if is_root
    http-response set-status 200 if is_root

    # Your existing backend configuration goes here
