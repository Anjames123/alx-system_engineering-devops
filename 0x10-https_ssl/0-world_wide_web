#!/usr/bin/env bash

# Function to display subdomain information
subdomain_details() {
    domain="$1"
    subdomain="$2"

    # Perform DNS lookup using dig and extract the ANSWER SECTION using awk
    dig_output=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION:/ {getline; print}')

    # Extract the record type and destination IP using awk
    record_type=$(echo "$dig_output" | awk '{print $4}')
    destination=$(echo "$dig_output" | awk '{print $5}')

    # Display the subdomain information
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script logic
if [ $# -eq 1 ]; then
    # Display information for default subdomains: www, lb-01, web-01, web-02
    subdomain_details "$1" "www"
    subdomain_details "$1" "lb-01"
    subdomain_details "$1" "web-01"
    subdomain_details "$1" "web-02"
elif [ $# -eq 2 ]; then
    # Display information for the specified subdomain
    subdomain_details "$1" "$2"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
